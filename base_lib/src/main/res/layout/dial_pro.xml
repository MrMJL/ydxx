<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="336px"
    android:layout_height="308px"
    android:background="@drawable/bac_add_goods_c">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49px"
        android:indeterminateDrawable="@anim/progress_pic" />

    <TextView
        android:id="@+id/dp_pro_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49px"
        android:text="正在从平台同步中..."
        android:textColor="#363636"
        android:textSize="28px" />

</RelativeLayout>